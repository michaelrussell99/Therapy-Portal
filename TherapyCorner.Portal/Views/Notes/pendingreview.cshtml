@using TherapyCorner.Portal.Models
@using TherapyCorner.Portal.ResourceText;
@using www.therapycorner.com.company;

@model SessionNoteList
@{
    ViewBag.Title = NotePages.PendingReview;
}
<h2 class="breadcrumb">@Html.ActionLink(SharedPages.Calendar, "index", "appointment") &gt; @NotePages.PendingReview</h2>


<table class="sortable">
    <thead>
        <tr>
            <th><div class="tdSingleButton"></div></th>
            <th><div class="NameText"><a href="#">@Dictionary.Client</a></div></th>
            <th><div class="DateTimeText"><a href="#">@NotePages.Time </a></div></th>
            <th class='HideSmall'><div class="IdText"><a href="#">@Dictionary.Service</a></div></th>
            <th class='HideMedium'><div class="NameText"><a href="#">@Dictionary.Provider</a></div></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var p in Model)
            {
                <tr>
                    <td>
                        <div class="tdSingleButton">
                            <a href="@Url.Action("details",new { id = p.NoteId })">
                                <img src="~/images/magnify.png" />
                            </a>
                        </div>
                    </td>
                    <td><div class="NameText">@p.Client.Name</div></td>
                    <td><div class="DateTimeText">@p.Appointment.Start.ToString("g")</div></td>
                    <td class='HideSmall'><div class="IdText">@p.Service.Name</div></td>
                    <td class='HideMedium'><div class="NameText">@p.Provider.Name</div></td>
                </tr>
            }
        }
    </tbody>
</table>




