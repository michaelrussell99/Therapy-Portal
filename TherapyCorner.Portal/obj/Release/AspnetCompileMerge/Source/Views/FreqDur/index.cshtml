@using TherapyCorner.Portal.Models
@using TherapyCorner.Portal.ResourceText;
@using www.therapycorner.com.company;

@model FreqDurInfoList

@{
    ViewBag.Title = Dictionary.FreqDur;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="breadcrumb">@Html.ActionLink(Dictionary.Administration, "index") &gt; @Dictionary.FreqDur</h2>

<section style="padding-bottom:10px">
    <button onclick="window.location='@Url.Action("create")'">@FreqDurPages.AddRate</button>
</section>

<section>
    <table class="sortable">
        <thead>
            <tr>
                <th class="tdSingleButton"></th>
                <th style="min-width:150px"><a href="#">@Dictionary.Name</a></th>
                <th class="NumberText HideMobile"><a href="#">@www.therapycorner.com.company.ResStrings.Dictionary.Duration</a></th>
               <th class="NumberText HideSmall"><a href="#">@www.therapycorner.com.company.ResStrings.Dictionary.PerWeek</a></th>
                <th class="NumberText HideMobile"><a href="#">@www.therapycorner.com.company.ResStrings.Dictionary.Weeks</a></th>
                <th class="BoolText "><a href="#">@www.therapycorner.com.company.ResStrings.Dictionary.IsActive</a></th>
           </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var p in Model)
                {
                    <tr>
                        <td>
                            <div class="tdSingleButton">

                                    <a href="@Url.Action("update",new { id = p.FreqDurId })">
                                        <img src="~/images/edit.png" />
                                    </a>
                                
                            </div>
                        </td>
                        <td>@p.Name</td>
                        <td class="HideMobile NumberText">@p.Duration</td>
                        <td class="HideSmall NumberText">@p.PerWeek.ToString("F2")</td>
                        <td class="HideMobile NumberText">@p.Weeks</td>
                        <td>@(p.IsActive ? Dictionary.Yes : Dictionary.No)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</section>
