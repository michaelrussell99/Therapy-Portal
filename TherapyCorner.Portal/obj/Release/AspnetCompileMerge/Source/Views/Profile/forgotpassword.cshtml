@using TherapyCorner.Portal.Models
@using TherapyCorner.Portal.ResourceText;


@model ForgotPasswordLogin
@{
    ViewBag.Title = ProfilePages.ForgotPassword;
    Layout = "~/Views/Shared/_LayoutNL.cshtml";

}

<h2>@ProfilePages.ForgotPassword</h2>
<p>@ProfilePages.ForgotPasswordInstr1</p>
<section>

    @using (Html.BeginForm("forgotpassword", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Login)
                @Html.TextBoxFor(m => m.Login, new { @class = "form-control", maxlength = 20 })
                @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })

            </div>
           
            <div class="form-group">
                <button style="margin-left:200px" type="submit">@Dictionary.Continue</button>
            </div>
    }
</section>
<h3 style="text-align:center">@Html.ActionLink(ProfilePages.Login, "login")</h3>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")


}






