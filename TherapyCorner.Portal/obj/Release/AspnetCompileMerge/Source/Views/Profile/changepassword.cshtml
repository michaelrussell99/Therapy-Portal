@using TherapyCorner.Portal.Models
@using TherapyCorner.Portal.ResourceText;


@model ChangePasswordModel
@{
    ViewBag.Title = ProfilePages.ChangePassword;

}

<h2 class="breadcrumb">@Html.ActionLink(ProfilePages.MyProfile,"index","profile") &gt; @ProfilePages.ChangePassword</h2>


    @using (Html.BeginForm("changepassword", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.CurrentPassword)
            @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", maxlength = 20, autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", maxlength = 20, autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.RptPassword)
            @Html.PasswordFor(m => m.RptPassword, new { @class = "form-control", maxlength = 20, autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.RptPassword, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">
            <button style="margin-left:200px" type="submit">@Dictionary.Save</button>
        </div>
    }


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")


}

